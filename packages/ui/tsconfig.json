{
  "extends": "@acme/tsconfig/internal-package.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "ES2022"],
    "jsx": "react-jsx",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "module": "ES2020",
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "**/*.tsx", "src"],
  "exclude": ["dist", "build", "node_modules"]
}
